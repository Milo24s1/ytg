<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>YTGallery</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">


    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.9/css/mdb.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.6.3/flexslider.min.css" rel="stylesheet">
    <link href="/css/custom.css" rel="stylesheet">


</head>
<body>
<nav class="navbar navbar-dark ">
    <a class="navbar-brand" href="/">
        <div class="logo">YTGallery</div>
    </a>
    <!--<a href="add"><button id="addButton" type="button" class="btn  btn-lg orange">Add Token</button></a>-->
</nav>
<!--<div id="preloader" class="preloader"></div>-->
<div style="height: 10vh">
</div>

<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 event-list">

        <% for(var i=0; i < allEvents.length; i++) { %>

        <div class="row event-row">
            <div style="width: 100%">
                <h1 class="h1"><a href="/event/<%=allEvents[i]._id %>"><%= allEvents[i].eventName %>-<%= allEvents[i].year %></a></h1>
            </div>
            <div class="">
                <div class="flexslider carousel">
                    <ul class="slides">

                        <!--Render video in Event-->
                        <%
                            var tempEventId = allEvents[i]._id;
                        var eventVideos = videoMap[tempEventId];
                        if(eventVideos != undefined && eventVideos.length !=undefined){
                        for(var j=0; j < eventVideos.length; j++) {
                        %>

                        <li>
                            <!--<img src="https://img.youtube.com/vi/<%=  eventVideos[j].url.substr(eventVideos[j].url.length-11) %>/0.jpg" style="width: 246px;" />-->
                            <iframe  allowfullscreen width="246px" src="https://www.youtube.com/embed/<%=  eventVideos[j].videoId%>">
                            </iframe>
                            <p class="font-weight-bold"><%=eventVideos[j].title%></p>
                            <!--<p class="text-truncate"><%- eventVideos[j].description%></p>-->
                            <span ><%=eventVideos[j].likes%><i class="fa fa-thumbs-up fa-1x cyan-text pr-3"></i></span>
                            <span ><%=eventVideos[j].dislikes%><i class="fa fa-thumbs-down fa-1x  red-text pr-3"></i></span>
                            <span ><%=eventVideos[j].comments%><i class="fa fa-comment purple-text fa-1x  pr-3"></i></span>
                            <span ><%=eventVideos[j].views%><i class="fa fa-eye orange-text fa-1x  pr-3"></i></span>
                            <a href="/channel/<%=eventVideos[j].channelId%>"><%=eventVideos[j].owner%></a>
                        </li>
                        <% }} %>
                    </ul>
                </div>
            </div>
        </div>

        <% } %>

    </div>
    <div class="col-md-1"></div>
</div>




<!-- Footer -->
<footer class="page-footer font-small ">

    <!-- Copyright -->
    <div class="footer-copyright text-center py-3">Â© 2018 Copyright:
        <a href="/">  ytgallery.com</a>
    </div>
    <!-- Copyright -->

</footer>
<!-- Footer -->

<!-- JQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.6.3/jquery.flexslider-min.js"></script>
<!-- Bootstrap tooltips -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.13.0/umd/popper.min.js"></script>
<!-- Bootstrap core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
<!-- MDB core JavaScript -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.9/js/mdb.min.js"></script>

<script>
    $(document).ready(function() {
        $('.flexslider').flexslider({
            animation: "slide",
            animationLoop: false,
            itemWidth: 210,
            itemMargin: 50,
            minItems: 1,
            maxItems: 3,
            start: function(slider){
                slider.resize();
                $('#preloader').removeClass('preloader');
            },
            end: function(slider){

            }
        });

    });
</script>
<style>
    .preloader {
        position: fixed;
        left: 0;
        top: 0;
        z-index: 999;
        width: 100%;
        height: 100%;
        overflow: visible;
        background: #333 url('http://files.mimoymima.com/images/loading.gif') no-repeat center center;
    }

    .content {
        background-color:green;
        margin: 10px;
        color:white;
        text-align:center;
    }


    .flexslider .slides > li:first-child {
        display: block;
        -webkit-backface-visibility: visible;
    }

</style>
</body>